<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme ACTUALIZADA -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Personaliza tu tema aquÃ­ -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Colores del sistema -->
        <item name="android:statusBarColor">#F2FFFFFF</item> <!-- Blanco con 95% opacidad -->
        <item name="android:navigationBarColor">#F2FFFFFF</item> <!-- Blanco con 95% opacidad -->

        <!-- Iconos oscuros -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Evitar transparencia no deseada -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <!-- Otras variantes de tema (opcional, no activas actualmente) -->
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <item name="android:statusBarColor">#1f1f1f</item>
    </style>

    <style name="AppTheme.NoActionBarLaunch" parent="Theme.SplashScreen">
        <item name="android:background">@drawable/splash</item>
    </style>

</resources>

